		update pj_data_remind a
		inner join (
		SELECT orgid, sum(char_off_amt) as remindQty 
		from fi_rp_account 
		where audit_sign = 1 and rp_dc = -1 and to_days(audit_date) = to_days(now()) 
		group by orgid) b
		on a.orgid = b.orgid
		set a.remind_value = b.remindQty, a.operate_date = SYSDATE()
