<sqlMap>
    <parameterMap class="commonj.sdo.DataObject" id="parameterMap">
        <parameter javaType="date" jdbcType="DATE" property="dateType"/>
    </parameterMap>
    <resultMap class="commonj.sdo.DataObject" id="resultMap">
        <result column="TYPEID" javaType="string" property="typeId"/>
    </resultMap>
    <select id="getTalkArtList" parameterClass="HashMap" resultClass="com.hsapi.crm.basic.crmBasic.CrmTalkArt">
        SELECT id, orgcode, type_id typeId, topic, source, content, recorder, 
        record_date recordDate, modifier, modify_date modifyDate, orgid
        FROM crm_talk_art
        WHERE 1=1
        <isNotNull property="typeId">
            AND type_id = #typeId#
        </isNotNull>
        <isNotNull property="source">
            AND source like '%$source$%'
        </isNotNull>
        
        <isNotNull property="topic">
            AND topic like '%$topic$%'
        </isNotNull> 
        <isNotNull property="recorder">
            AND recorder like '%$recorder$%'
        </isNotNull>          
    </select>
</sqlMap>