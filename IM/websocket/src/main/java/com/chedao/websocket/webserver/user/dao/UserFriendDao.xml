	<insert id="save" parameterType="com.chedao.websocket.webserver.user.model.UserFriendEntity" useGeneratedKeys="true" keyProperty="id">
		insert into user_friend
		(
			`userid`,
			`username`,
			`friendid`,
			`friendname`,
			`typeid`,
			`buildtime`
		)
		values
		(

			#{userid},
			#{username},
			#{friendid},
			#{friendname},
			#{typeid},
			NOW()
		)
	</insert>


	<update id="update" parameterType="com.chedao.websocket.webserver.user.model.UserFriendEntity">
		update user_friend
		<set>
			<if test="typeid != null">`type_id` = #{typeid},</if>
		</set>
		<set>
			<if test="typeid != null">`friend_name` = #{friendname} </if>
		</set>
		where id = #{id}
	</update>

	<delete id="deleteOne">
		delete from user_friend where id = #{value}
	</delete>

	<delete id="delete" parameterType="com.chedao.websocket.webserver.user.model.UserFriendEntity">
		delete from user_friend where id = #{id} or ( user_id = #{friendid} and friend_id={userid} )
	</delete>

