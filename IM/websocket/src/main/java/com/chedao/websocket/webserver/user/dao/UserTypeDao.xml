    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.chedao.websocket.webserver.user.model.UserTypeEntity" id="UserTypeMap">
        <result property="id" column="id"/>
        <result property="userid" column="userid"/>
        <result property="name" column="name"/>
        <result property="buildtime" column="buildtime"/>
    </resultMap>

    <sql id="Base_Column_List" >
  	  	     id ,
  	  	     user_id ,
  	  	     name,
  	  	     build_time

  </sql>

   <!-- 查找该用户所有分组-->
    <select id="queryList" resultType="com.chedao.websocket.webserver.user.model.UserTypeEntity" parameterType="map">
        select  <include refid="Base_Column_List" />  from user_type where user_id = #{userid}
    </select>
