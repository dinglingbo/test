    <insert id="save" parameterType="com.chedao.websocket.webserver.user.model.UserTypeEntity" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
		insert into user_type
		(
			`user_id`,
			`name`,
			`build_time`

		)
		values
		(
			#{userid},
			#{name},
			#{buildtime}
		)
	</insert>

    <update id="update" parameterType="com.chedao.websocket.webserver.user.model.UserTypeEntity">
        update user_type
        <set>
            <if test="name != null">`name` = #{name}</if>
        </set>
        where id = #{id}
    </update>


    <delete id="delete">
		delete from user_type
		where id = #{value}
	</delete>

